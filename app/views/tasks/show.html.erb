<div class="container">
  <h3>詳細画面</h3>
    <div class="col-xs-12">
      <div class="panel panel-default">
         <div class="panel-heading"><%= @task.title %></div>
         <div class="panel-body">
           <h4>詳細：<%= @task.description %></h4>
           <h4>カテゴリー: <%= @task.all_tags  %></h4>
           <h4>進行状況：<%= @task.state_i18n %></h4>
           <h4>終了期限：<%= @task.deadline.to_s(:deadline) %></h4>
         </div>
     </div>
   </div>
</div>
