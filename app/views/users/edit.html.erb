<h3>編集ページ</h3>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      このフォームは <%= pluralize(@user.errors.count, "のエラーを含んでいます") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">登録フォーム</div>
  </div>
  <div class="panel-body">
      <%= form_for @user do |f| %>
      <div class="form-group">
       <label>ニックネーム</label>
        <%= f.text_field :name, placeholder:'ニックネーム', class:"form-control" %>
      </div>
      <div class="form-group">
        <label>メールアドレス</label>
        <%= f.email_field :email, placeholder:'メールアドレス', class:"form-control" %>
      </div>
      <div class="form-group">
        <label>アドミン権限</label>
        <%= f.select :admin, [['許可', true], ['不許可', false]] %>
      </div>
        <%= f.submit '編集する', class:"btn btn-primary" %>
      <% end %>
  </div>
